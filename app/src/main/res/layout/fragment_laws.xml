<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".menu_manager.LawsFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:src="@drawable/course_synopsis"
            android:adjustViewBounds="true"
            android:maxHeight="150dp"
            android:maxWidth="150dp"
            android:layout_marginTop="20dp" />

        <Button style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:text="Copyright Act (Amendment) 1997"
            android:id="@+id/law1"
            android:layout_below="@+id/imageView"
            android:layout_marginTop="30dp" />

        <Button style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:text="Computer Crimes Act 1997"
            android:id="@+id/law2"
            android:layout_below="@+id/law1"
            android:layout_marginTop="5dp"/>

        <Button style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:text="Digital Signature Act 1997 [Act 562]"
            android:id="@+id/law3"
            android:shadowRadius="5"
            android:layout_below="@+id/law2"
            android:layout_marginTop="5dp"/>

        <Button style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:text="Telemedicine Act 1997"
            android:id="@+id/law4"
            android:layout_below="@+id/law3"
            android:layout_marginTop="5dp" />

        <Button style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:text="Communications and Multimedia Act 1998 [Act 588] "
            android:id="@+id/law5"
            android:layout_below="@+id/law4"
            android:layout_marginTop="5dp" />

        <Button style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:text="Malaysian Communications And Multimedia Commission Act 1998 [Act 589]"
            android:id="@+id/law6"
            android:shadowRadius="5"
            android:layout_below="@+id/law5"
            android:layout_marginTop="5dp" />

        <Button style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:text="Payment Systems Act 2003"
            android:id="@+id/law7"
            android:layout_below="@+id/law6"
            android:layout_marginTop="5dp" />

        <Button style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:text="Electronic Commerce Act 2006"
            android:id="@+id/law8"
            android:layout_below="@+id/law7"
            android:layout_marginTop="5dp" />

        <Button style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:text="Electronic Government Activities Act 2007"
            android:id="@+id/law9"
            android:layout_below="@+id/law8"
            android:layout_marginTop="5dp" />

        <Button style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:text="Personal Data Protection Act 2010"
            android:id="@+id/law10"
            android:layout_below="@+id/law9"
            android:layout_marginTop="5dp" />

        <Button style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:text="Penal Code"
            android:id="@+id/law11"
            android:layout_below="@+id/law10"
            android:layout_marginTop="5dp" />

        <Button style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:text="Communications and Multimedia Content Code"
            android:id="@+id/law12"
            android:layout_below="@+id/law11"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"/>
    </LinearLayout>

</ScrollView>
